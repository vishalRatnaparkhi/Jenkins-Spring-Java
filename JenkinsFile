pipeline {
  agent {
    docker {
      image 'ratnparkhiv/jenkins-spring-java:v2'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }

tools{
maven 'maven_server'
}
environment {
        PATH = "${env.MAVEN_HOME}/bin:${env.PATH}"
    }

  stages {
    stage('Checkout') {
    steps {
        sh 'echo passed'
        sh 'echo ${MAVEN_HOME}'
        sh 'echo ${PATH}'
        sh ' ls -ltr '
        
        // Uncomment the git step when you're ready to checkout the repository
        // git branch: 'master', url: 'https://github.com/vishalratn/Jenkins-Spring-Java.git'
    }
}

    stage('Build and Test') {
      steps {
     
        // build the project and create a JAR file
        sh '/var/lib/jenkins/tools/hudson.tasks.Maven_MavenInstallation/maven_server/bin/mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://3.14.147.252:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "ratnparkhiv/jenkins-spring-java:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "jenkins-spring-java/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "Jenkins-spring-java-manifests"
            GIT_USER_NAME = "vishalratn"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "ratnparkhiv@gmail.com"
                    git config user.name "vishalratn"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" Jenkins-spring-java-manifests/deployment.yml
                    git add Jenkins-spring-java-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
